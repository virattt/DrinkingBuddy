<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
        
        <SurfaceView
            android:id="@+id/drink_camera_surfaceView"
        	android:layout_height="match_parent"
        	android:layout_width="match_parent" >
        </SurfaceView>
        
        <ImageButton
            android:id="@+id/drink_camera_flashButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:background="@null"
            android:contentDescription="@drawable/ic_flash_off_holo_light_large">
        </ImageButton>
        
        <ImageButton
            android:id="@+id/drink_camera_takePictureButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_shutter_default"
            android:contentDescription="@drawable/btn_camera_shutter_holo_large">
        </ImageButton>
    
    <FrameLayout
        android:id="@+id/drink_camera_progressContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" >
        
        <ProgressBar
            style="@android:style/Widget.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >
        </ProgressBar>
        
    </FrameLayout>
    
    
    
    
</RelativeLayout>
